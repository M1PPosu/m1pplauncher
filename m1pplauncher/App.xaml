<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="m1pplauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:CommunityToolkit.WinUI.Converters"
    xmlns:local="using:m1pplauncher">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>

      <conv:BoolNegationConverter x:Key="InvBool" />
      <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" TrueValue="Visible" FalseValue="Collapsed" />
      <conv:BoolToVisibilityConverter x:Key="InvBoolToVisibility" TrueValue="Collapsed" FalseValue="Visible" />

      <ImageSource x:Key="Logo">ms-appx:///Assets/Logo.png</ImageSource>
      <ImageSource x:Key="LogoSquare">ms-appx:///Assets/LogoSquare.png</ImageSource>

    </ResourceDictionary>
  </Application.Resources>
</Application>
